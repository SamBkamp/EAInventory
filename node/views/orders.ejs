
    <!doctype html>
        <html lang="en">
    <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>WIYL inventory system</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="/styles/ordersstyle.css" rel="stylesheet">
    </head>
    <body>

      <!--
	  ADD MODAL START
	-->

      <div class="modal fade" id="addModal" tabindex="-1">
	<div class="modal-dialog">
	  <div class="modal-content">
	    <div class="modal-header">
              <h5 class="modal-title">Add Order</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
	    </div>
	    <div class="modal-body" >
              <div class="row align-items-center">
		<div class="col-auto">
		  <label for="addItemSel" class="col-form-label">Product</label>
		</div>
		<div class="col-auto">
		  <select id="addItemSel" class="form-select"> </select>
		</div>
		<div class="col-auto">
		  <label for="qtyInput" class="col-form-label">Quantity</label>
		</div>
		<div class="col-auto" style="width: 30%;">
		  <input type="number" id="qtyInput" class="form-control" style="width: 100%;">
		</div>		
	      </div>
	      <div class="row align-items-center mt-3 mb-3">
		<div class="col-auto">
		  <label for="dateSel" class="col-form-label">Date</label>
		</div>
		<div class="col-auto">
		  <input type="date" id="dateSel" class="form-control">
		</div>		
		<div class="col-auto">
		  <label for="noteIn" class="col-form-label">Note</label>
		</div>
		<div class="col-auto" style="width: 34%">
		  <textarea id="note" class="form-control"></textarea>
		</div>		
	      </div>
	      </div>
	    <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
              <button type="button" id="addButton" class="btn btn-primary">Add</button>
	    </div>
	  </div>
	</div>
	</div>
      
      <!--
	  ADD MODAL END
	-->


       <!--
	  NOTES MODAL START
	-->

      <div class="modal fade" id="notesModal" tabindex="-1">
	<div class="modal-dialog">
	  <div class="modal-content">
	    <div class="modal-header">
              <h5 class="modal-title">Note</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
	    </div>
	    <div class="modal-body" >
	      <p id="Note" class="text-wrap text-break"></p>
	      
	    </div>
	    <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
	    </div>
	  </div>
	</div>
	</div>
      
      <!--
	  NOTES MODAL END
	-->

      <%- include('partials/sidebar.ejs') %>    

    <div class="container justify-self-center flex-column" id="mainContent">
    <div class="row mt-5" >
      <h3>Cherry Order Log       <button type="button" class="btn btn-success float-end" style="width: 60px;" data-bs-toggle="modal" data-bs-target="#addModal">&#43;</button></h3>

    </div>
    <div class="row mt-5">
    <table class="table">
    <thead>
    <tr>
    <th scope="col" style="width: 20%;">Model</th>
    <th scope="col" style="width: 20%;">Quantity</th>
    <th scope="col" style="width: 20%;">Date</th>
    <th scope="col" class="overflow-hidden" style="width: 20%;">Notes</th>
    </tr>
    </thead>
    <tbody id="tankRows">
      

    </tbody>
    </table>
    </div>

    
    </div>

    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src=" https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js "></script>
    <script src="/scripts/ordersscript.js"></script>
    </body>
